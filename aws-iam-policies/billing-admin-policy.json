{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "aws-portal:*",
        "billing:*",
        "ce:*",
        "cur:*",
        "pricing:*",
        "budgets:*",
        "purchase-orders:*",
        "tax:*",
        "payments:*",
        "freetier:*",
        "invoicing:*",
        "account:GetAccountInformation",
        "account:GetAlternateContact",
        "account:GetChallengeQuestions",
        "account:GetContactInformation",
        "account:GetRegionOptStatus",
        "account:ListRegions",
        "organizations:Describe*",
        "organizations:List*",
        "organizations:ViewAccount",
        "organizations:GenerateOrganizationsAccessReport",
        "cost-optimization-hub:*",
        "savingsplans:*",
        "support:DescribeCases",
        "support:DescribeCommunications",
        "support:DescribeServices",
        "support:DescribeSeverityLevels",
        "support:DescribeSupportLevel",
        "support:DescribeTrustedAdvisorCheckRefreshStatuses",
        "support:DescribeTrustedAdvisorCheckResult",
        "support:DescribeTrustedAdvisorChecks",
        "support:DescribeTrustedAdvisorCheckSummaries",
        "support:RefreshTrustedAdvisorCheck",
        "support:ResolveCases",
        "support:SearchForCases",
        "trustedadvisor:Describe*",
        "compute-optimizer:Get*",
        "compute-optimizer:List*",
        "compute-optimizer:Export*",
        "compute-optimizer:GetEnrollmentStatus",
        "compute-optimizer:GetEnrollmentStatusesForOrganization",
        "compute-optimizer:GetRecommendationPreferences",
        "compute-optimizer:GetRecommendationSummaries",
        "compute-optimizer:UpdateEnrollmentStatus",
        "cloudwatch:Get*",
        "cloudwatch:List*",
        "cloudwatch:Describe*",
        "tag:Get*",
        "resource-groups:List*",
        "resource-groups:Get*",
        "resourcegroupstaggingapi:Get*",
        "health:Describe*"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "iam:GetAccountSummary",
        "iam:GetUser",
        "iam:ListUsers",
        "iam:ListRoles",
        "iam:ListGroups",
        "iam:ListAccountAliases",
        "iam:GetAccountPasswordPolicy",
        "iam:GetRole",
        "iam:GetPolicy",
        "iam:ListAttachedRolePolicies",
        "iam:ListAttachedUserPolicies",
        "iam:ListAttachedGroupPolicies",
        "iam:ListPolicies",
        "iam:GenerateCredentialReport",
        "iam:GetCredentialReport"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:ListAllMyBuckets",
        "s3:GetBucketLocation",
        "s3:GetBucketTagging",
        "s3:GetStorageLensConfiguration",
        "s3:GetStorageLensDashboard",
        "s3:GetStorageLensConfigurationTagging",
        "s3:ListStorageLensConfigurations",
        "ec2:DescribeReservedInstances",
        "ec2:DescribeReservedInstancesListings",
        "ec2:DescribeReservedInstancesModifications",
        "ec2:DescribeReservedInstancesOfferings",
        "ec2:DescribeInstances",
        "ec2:DescribeRegions",
        "ec2:DescribeAccountAttributes",
        "rds:DescribeReservedDBInstances",
        "rds:DescribeReservedDBInstancesOfferings",
        "redshift:DescribeReservedNodes",
        "redshift:DescribeReservedNodeOfferings",
        "dynamodb:DescribeReservedCapacity",
        "dynamodb:DescribeReservedCapacityOfferings",
        "elasticache:DescribeReservedCacheNodes",
        "elasticache:DescribeReservedCacheNodesOfferings",
        "es:DescribeReservedInstances",
        "es:DescribeReservedInstanceOfferings",
        "opensearch:DescribeReservedInstances",
        "opensearch:DescribeReservedInstanceOfferings"
      ],
      "Resource": "*"
    }
  ]
}
